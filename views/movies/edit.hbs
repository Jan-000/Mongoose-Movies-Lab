<h1>Edit the chosen</h1>
<form action = "/movies/{{movie._id}}" method ="POST">


<label for = "title">Title</label>
<input id="title" type="text" name="title" value="{{movie.title}}">

<label for="genre">Genre</label>
<input id="genre" value="{{movie.genre}}">

<label for = "plot">Plot</label>
<input id="plot" value ="{{movie.plot}}">

<select name="cast" multiple size ="10"> {{#each celebrities}}
    {{{selector ../movie}}}
    {{/each}}

</select>

<button type="submit">Update</button>

</form>